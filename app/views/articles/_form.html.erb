      <div><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</div>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, "标题", class: "control-label" %><br>
