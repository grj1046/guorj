<div class="content">
  <div class="panel">
    <div class="article_title">
      <%= @article.title %> 
    </div>
    <div class="inner">
      <div class="article_content">
       <%= @article.content %> 
      </div>
    <div class="article_footer small">
    <div class="posted_time">
      <% if @article.updated_at > @article.created_at %>
        更新时间:<%= @article.updated_at.localtime.to_s(:db) %>
      <% else %>
        创建时间:<%= @article.created_at.localtime.to_s(:db) %>
      <% end %>
    </div>
    </div> 
    <div class="action"></div>
    </div>
  </div>
</div>

<% if signed_in? && current_user?(current_user) %>
  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>
<% end %>

<%= content_for :styles do %>
  <%= stylesheet_link_tag "articles", media: "all" %>
<% end %>
