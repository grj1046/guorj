<% provide(:title, @article.title) %>
<div class="content">
  <div class="panel">
    <div class="article_title">
      <%= @article.title %> 
    </div>
    <div class="inner">
      <div class="article_content">
       <%= markdown @article.content %> 
      </div>
    <div class="article_footer small">
    <div class="posted_time">
      <% if @article.updated_at > @article.created_at %>
        更新时间:<%= @article.updated_at.localtime.to_s(:db) %>
      <% else %>
        创建时间:<%= @article.created_at.localtime.to_s(:db) %>
      <% end %>
      <% if signed_in? %>
        <%= link_to '编辑', edit_article_path(@article) %>
        <%= link_to '删除', @article, method: :delete, data: {confirm: '确定要删除吗?'} %>
      <% end %>
      <%= link_to '返回', articles_path %>
    </div>
    </div> 
    <div class="action"></div>
    </div>
  </div>
</div>

<%= content_for :styles do %>
  <%= stylesheet_link_tag "articles", media: "all" %>
<% end %>
