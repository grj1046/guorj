<h1>登录</h1>
<hr />
<div>
  <%= form_for(:session, url: sessions_path, html: {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <%= f.label :email, "电子邮箱", class: "col-md-2 control-label" %>
      <%= f.text_field :email, class: "col-md-10 form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "登录密码", class: "col-md-2 control-label" %>
      <%= f.password_field :password, class: "col-md-10 form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "登录", class: "btn btn-primary col-md-offset-2" %>
    </div>
  <% end %>

  <p>新用户？<%=link_to "注册", signup_path %><p>
</div>

<%= content_for :styles do %>
  <%= stylesheet_link_tag "sessions", media: "all" %>
<% end %>
