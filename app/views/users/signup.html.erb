<div class="">
  <div class="">
    <%= form_for @user, html: { class: "form-horizontal", role: "form"} do |f| %>
      <h2>注册</h2>
      <hr />
      <%= render 'shared/error_messages', object: f.object %>
      <div class="form-group">
        <%= f.label :name, "昵称", class: "col-md-2 control-label" %>
        <%= f.text_field :name, class: "col-md-10 form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "电子邮箱", class: "col-md-2 control-label" %>
        <%= f.text_field :email, class: "col-md-10 form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :password, "密码", class: "col-md-2 control-label" %>
        <%=  f.password_field :password, class: "col-md-10 form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "确认密码", class: "col-md-2 control-label" %>
        <%= f.password_field :password_confirmation, class: "col-md-10 form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "注册", class: "btn btn-primary col-md-offset-2" %>
      </div>
    <% end %>
  </div>
</div>

<%= content_for :styles do %>
  <%= stylesheet_link_tag "users", media: "all" %>
<% end %>
